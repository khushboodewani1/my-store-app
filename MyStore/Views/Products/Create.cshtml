@model MyStore.Model.Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Create Product</h2>

    <form asp-action="Create">
        <div class="card shadow-sm p-4">
            <div class="form-group mb-3">
                <label asp-for="Name" class="font-weight-semibold">Product Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="font-weight-semibold">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price.Amount" class="font-weight-semibold">Price</label>
                <input asp-for="Price.Amount" class="form-control" placeholder="Enter product price" />
                <span asp-validation-for="Price.Amount" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price.Currency" class="font-weight-semibold">Currency</label>
                <input asp-for="Price.Currency" class="form-control" placeholder="Enter currency (e.g., USD)" />
                <span asp-validation-for="Price.Currency" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="CategoryMasterId" class="font-weight-semibold">Category</label>
                <select asp-for="CategoryMasterId" asp-items="@(ViewData["CategoryMasterId"] as SelectList)" class="form-control">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryMasterId" class="text-danger small"></span>
            </div>

            <div class="form-group d-flex justify-content-between">
                <button type="submit" class="btn btn-success btn-lg w-48">Save</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg w-48 text-center">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
