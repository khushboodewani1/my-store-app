@model MyStore.Model.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Delete Product</h2>

    <div class="card shadow-sm p-4">
        <h4 class="text-center mb-3">Are you sure you want to delete this product?</h4>

        <div class="text-center mb-4">
            <h5><strong>@Model.Name</strong></h5>
            <p class="text-muted">@Model.Description</p>
        </div>

        <form asp-action="Delete" class="d-flex justify-content-center align-items-center">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger btn-lg mr-3">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
