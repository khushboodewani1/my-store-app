@model MyStore.Model.CategoryMaster
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 500px;">
        <h3 class="text-center text-danger fw-bold mb-4">Delete Category</h3>

        <h5 class="text-center mb-3">Are you sure you want to delete this category?</h5>
        <div class="text-center mb-4">
            <strong class="text-warning fs-5">@Model.Name</strong>
        </div>

        <form asp-action="Delete" method="post" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger w-48">Delete</button>
                <a asp-action="Index" class="btn btn-secondary w-48 text-center">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
