@model IEnumerable<MyStore.Model.CategoryMaster>
@{
    ViewData["Title"] = "Category List";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Categories</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-success btn-lg w-100">+ Add Category</a>
        </div>
    }

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Category Name</th>
                @if (User.IsInRole("Admin"))
                {
                    <th class="text-center">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm mr-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
